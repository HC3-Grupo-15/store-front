{
  //pagina de produto, baseado nos tutoriais feito em aula

  "store.product": {
    "children": [
      "breadcrumb",
      "flex-layout.row#main",
      "flex-layout.row#desc"
      //"shelf.relatedProducts"
    ]
  },
  "flex-layout.row#main": {
    "props": {
      "marginTop": 3,
      "colGap": 7,
      "rowGap": 7,
      "marginBottom": 7,
      "paddingTop": 7,
      "paddingBottom": 7


    },
    "children": [
      "flex-layout.col#left",
      "flex-layout.col#right"
    ]
  },
  "flex-layout.col#left": {
    "props": {
      "width": "60%",
      "rowGap": 0
    },
    "children": [
      "product-images",
      "product-description"
    ]
  },
  "flex-layout.col#right": {
    "props": {
      "marginLeft":6,
      "preventVerticalStretch": true,
      "verticalAlign": "middle"
    },
    "children": [
      "product-price",
      "vtex.store-components:product-name",
      "product-rating-summary",
      "product-separator",
      "product-quantity",
      "product-identifier.product",
      "sku-selector",
      "flex-layout.row#buy-button",
      "availability-subscriber",
      "shipping-simulator",
      "share#default"
    ]
  },
  "product-price": {
    "props": {
      "showSavings": true,
      "showListPrice": true
      
      
    }
  },

  // "shipping-simulator":{
