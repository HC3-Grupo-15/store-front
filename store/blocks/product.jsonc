  //     "marginBottom":3
  //   }
  // },

  // "flex-layout.row#qty-sku": {
  //   "children": [
  //     "sku-selector",
  //     "product-quantity"
  //   ]
  // },

  "flex-layout.row#buy-button": {
    "props": {
      "marginTop": 4,
      "marginBottom": 7
    },
    "children": ["buy-button"]
  },
  
  "flex-layout.row#desc":{
    "props": {
      "marginTop": 1,
      "marginBottom": 3
    },
    "children": [
      "rich-text#missionProductPage" //"product-description"
    ]
  },
  
  "product-images": {
    "props": {
      
      "zoomMode": "in-place-hover",
      "thumbnailsOrientation":"vertical",
      "displayThumbnailsArrows": true,
      

      "aspectRatio": {
        "desktop": "16:9",
        "phone": "16:9"
      }
    }
  },

  "share#default":{
    "props": {
      "social": {
        "Facebook": true,
        "WhatsApp": true,
        "Twitter": true,
        "Pinterest": false
      }
    }
  },

  "rich-text#missionProductPage":{
    "props": {
      "textAlignment": "LEFT",
      "textPosition": "CENTER",
      "text": "### Corebiz Mission \n ### To be the largest company of experience, technology and marketing for commerce in Latin America.",
      "textColor": "c-on-emphasis",
      "font": "t-heading-1",
      "blockClass": "mission"
    }
  }

